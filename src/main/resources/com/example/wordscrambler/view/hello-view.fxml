                  <Font name="3270-Medium" size="17.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" top="100.0" />
               </VBox.margin>
            </TextField>
            <Button fx:id="TryButton" mnemonicParsing="false" onAction="#TryWord" text="Valider" visible="false">
