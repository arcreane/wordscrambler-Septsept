         <font>
            <Font name="3270-Medium" size="67.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="604.0" prefWidth="701.0">
         <VBox alignment="CENTER" prefHeight="468.0" prefWidth="201.0">
            <Button mnemonicParsing="false" onAction="#Easy" style="-fx-border-radius: 0;" text="Facile">
               <font>
                  <Font name="3270-Medium" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#Medium" text="Moyen">
               <font>
                  <Font name="3270-Medium" size="18.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#Hard" text="Difficile">
               <font>
                  <Font name="3270-Medium" size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
         </VBox>
         <VBox alignment="CENTER" prefHeight="468.0" prefWidth="469.0">
            <Label fx:id="Difficulty" text="Choisissez une difficultÃ©">
               <font>
                  <Font name="3270-Medium" size="25.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="100.0" />
