            </Label>
            <Label fx:id="WordToFind">
               <font>
                  <Font name="3270-Medium" size="25.0" />
               </font>
            </Label>
            <TextField fx:id="InputWord" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="24.0" prefWidth="200.0" visible="false">
