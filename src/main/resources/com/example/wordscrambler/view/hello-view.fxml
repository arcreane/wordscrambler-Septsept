<StackPane fx:id="background" style="-fx-background-image: url(@view/images/background.jpg);" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.wordscrambler.ScramblerController">


   <VBox alignment="CENTER" prefHeight="555.0" prefWidth="701.0">
